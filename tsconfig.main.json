{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist/main"
  },
  "include": [
    "src/index.ts",
    "src/preload.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "out",
    ".webpack",
    "src/renderer.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}